extends layout

block content
    h1 Edit Book
    form.edit-form(action="/books/" + id, method="post")
        p
            label(for="title") Title
            input(name="title" type="text" id="title" value= title)
        p
            label(for="author") Author
            input(name="author" type="text" id="author" value= author)
        p
            label(for="genre") Genre 
            input(name="genre" type="text" id="genre" value= genre)
        p
            label(for="year") Year
            input(name="year" type="text" id="year" value= year)
        p
            input(type="submit" value="Update Book")
    form.edit-form(method="post" action="/books/" + id + "/delete", onsubmit="return confirm('Do you really want to delete this book?');")
        p
            a.button(href="/books/") Cancel
        p: input(type="submit" value="Delete Book")