extends layout

block content
    h1 New Book
    form(action="/books/new", method="post" class="edit-form")
        p
            label(for="title") Title
            input(name="title" type="text" id="title" placeholder="Title...")
        p
            label(for="author") Author
            input(name="author" type="text" id="author" placeholder="Author...")
        p
            label(for="genre") Genre 
            input(name="genre" type="text" id="genre" placeholder="Genre...")
        p
            label(for="year") Year
            input(name="year" type="text" id="year" placeholder="Year...")
        p
            input(type="submit" value="Create New Book")
        p 
            a.button(href="/books/") Cancel 